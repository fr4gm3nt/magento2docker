#!/usr/bin/env bash


echo -e "\\r${CHECK_MARK} \e[0;32m Installer Magento"
docker-compose exec php bash -c "chown www-data:www-data /var/www/.composer/"
docker-compose exec -u www-data php bash -c "composer install"
docker-compose exec -u www-data php bash -c "bin/magento setup:upgrade"
docker-compose exec -u www-data php bash -c "bin/magento setup:static-content:deploy -f  -j 4 en_US pl_PL"
docker-compose exec -u www-data php bash -c "bin/magento cache:enable config"

echo -e "\\r${CHECK_MARK} \e[0;32m Installer has finished the job"

./bin/hosts

