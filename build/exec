#!/usr/bin/env bash

cd "$(dirname "$0")/.."

if [ "$1" == "-h" ]; then
  echo "
            -h          - show this help
            -gulp       - gulp styles
            -gulp:prod  - gulp styles --production
            -start      - start project containers
            -facl       - setfacl"
  exit 0
fi

if [ "$1" == "gulp" ] || [ "$1" == "-g"]; then
    docker run --rm -w /usr/share/nginx/home/vendor/snowdog/frontools/ -u www-data -v {{PROJECT_ABSOLUTE_PATH}}{{PROJECT_FOLDER}}/:/usr/share/nginx/home/ -ti fr4gm3nt/php7-docker:node6 bash -c "gulp style"
    echo "I will sacrifice this container in the name of Mighty RAM."
    exit
fi

if [ "$1" == "gulp:prod" ]; then
    docker run --rm -w /usr/share/nginx/home/vendor/snowdog/frontools/ -u www-data -v {{PROJECT_ABSOLUTE_PATH}}{{PROJECT_FOLDER}}/:/usr/share/nginx/home/ -ti fr4gm3nt/php7-docker:node6 bash -c "gulp style --production"
    echo "Job done. Styles minified. Container silently removed. Enjoy the view."
    exit
fi

if [ "$1" == "start" ]; then
    echo "Starting docker containers"
    cd "$(dirname "$0")/.."
    docker start $(docker ps -aqf name={{PROJECT_NAME}}*)
    echo docker ps
    exit
fi

if [ "$1" == "facl" ]; then
    ./bin/exec php "setfacl -dR -m u:www-data:rwX /usr/share/nginx/html"
    ./bin/exec php "setfacl -R -m u:www-data:rwX /usr/share/nginx/html"
fi

if [ -z "$2" ]; then
    docker exec -ti "{{PROJECT_NAME}}-${1}" /bin/bash
fi

docker exec -ti "{{PROJECT_NAME}}-${1}" /bin/bash -c "$2"